{
  "name": "Playpen",
  "version": "1.0.0",
  "description": "Playpen web app.",
  "main": "index.js",
  "scripts": {
    "xprebuild": "npm run clean",
    "xxbuild": "gulp build",
    "build": "npm run createDirs && npm run babelify && npm run sassify && npm run browserify && npm run copyResources",
    "start": "nodemon --watch src -e js,scss,json -x npm run reload",
    "deploy": "gh-pages -d public",
    "reload": "npm run build && npm run server",
    "server": "node_modules/.bin/http-server -c-1",
    "clean": "gulp clean",
    "createDirs": "gulp createDirs",
    "babelify": "npm run babelify-gmacciocca && npm run _babelify",
    "_babelify": "babel src --source-maps --out-dir ./lib",
    "babelify-gmacciocca": "npm run babelify-basement-storage && npm run babelify-lingo-localize && npm run babelify-life-events && npm run babelify-honest-error",
    "babelify-basement-storage": "cd node_modules/basement-storage && npm run _build ",
    "babelify-lingo-localize": "cd node_modules/lingo-localize && npm run _build",
    "babelify-life-events": "cd node_modules/life-events && npm run _build",
    "babelify-honest-error": "cd node_modules/honest-error && npm run _build",
    "browserify": "browserify ./lib/index.js --debug -o ./public/js/bundle.js",
    "sassify": "sass ./src/styles/styles.scss ./public/css/styles.css",
    "copyResources": "cp ./src/resources/*.json ./public/resources/",
    "test": "mocha test --recursive",
    "xxxxtest": "mocha --opts test/mocha.all.opts --colors",
    "copyPackage": "gulp copyPackage"
  },
  "author": "Gianluca Macciocca",
  "license": "MIT",
  "dependencies": {
    "history": "^4.3.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^2.8.1",
    "basement-storage": "git+ssh://git@github.com/gmacciocca/basement-storage.git",
    "lingo-localize": "git+ssh://git@github.com/gmacciocca/lingo-localize.git",
    "life-events": "git+ssh://git@github.com/gmacciocca/life-events.git",
    "honest-error": "git+ssh://git@github.com/gmacciocca/honest-error.git"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-es6-promise": "^1.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "copy": "^0.3.0",
    "del": "^2.2.2",
    "eslint": "^3.8.1",
    "eslint-plugin-react": "^6.4.1",
    "gh-pages": "^0.11.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-json5": "0.0.2",
    "gulp-sourcemaps": "^2.1.1",
    "http-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gmacciocca/playpen.git"
  }
}
